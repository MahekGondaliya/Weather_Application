<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/toast_background">

    <ImageView
        android:id="@+id/custom_toast_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/invalid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/custom_toast_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a Valid City"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/custom_toast_icon"
        app:layout_constraintTop_toTopOf="@id/custom_toast_icon"
        app:layout_constraintBottom_toBottomOf="@id/custom_toast_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>
